{
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint",
			"npm --prefix \"$RESOURCE_DIR\" run build",
			"npm --prefix ./client run build"
		]
	},
	"hosting": {
		"public": "client/build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
