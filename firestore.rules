rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      allow get;
      allow write: if request.auth != null;
      allow list: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous'
      
      match /intel/{id} {
      	allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous'
      }
      
      match /players/{player} {
      	allow update: if request.auth != null && request.auth.uid == request.resource.data.uid;
        allow read, create;
      }

      match /chat/{id} {
        allow read, create: if request.auth != null;
      }
      match /actions/{id} {
        allow read, create: if request.auth != null;
      }
    }
  }
}